# ===========================================
# 🤖 Subagent 环境配置模板
# ===========================================
# 此文件专门为subagent提供API访问配置
# 复制此文件为 .env.subagents 并填入真实的API密钥

# ------------------
# 核心 AI API 配置 (subagent必需)
# ------------------
# 主要AI模型 - DeepSeek (高性价比，适合大量代码分析)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# 备用AI模型 - Claude (高质量分析)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# 备用AI模型 - Doubao (本地化支持)
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_API_URL=https://ark.cn-beijing.volces.com/api/v3/chat/completions
DOUBAO_MODEL=doubao-seed-1-6-thinking-250715

# ------------------
# 项目管理 API (subagent协作)
# ------------------
# Linear - 用于任务管理和进度跟踪
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_team_id_here
LINEAR_PROFILE=default

# GitHub - 用于代码仓库操作
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=your_org/your_repo

# ------------------
# 数据库访问 (某些subagent需要)
# ------------------
# Supabase - 用于数据分析和架构重构
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ------------------
# 通知服务 (subagent报告推送)
# ------------------
# 邮件推送 - Resend
RESEND_API_KEY=your_resend_api_key_here
NOTIFICATION_EMAILS=your_email@example.com

# 微信推送 - Server酱
SERVER_CHAN_KEY=your_serverchan_key_here

# 企业微信机器人
WECHAT_WORK_WEBHOOK=your_wechat_webhook_here

# ------------------
# Subagent 专用配置
# ------------------
# 并发限制 (防止API速率限制)
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_MS=100

# 重试配置
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# 输出配置
SUBAGENT_LOG_LEVEL=info
SUBAGENT_OUTPUT_FORMAT=markdown

# 工作目录 (subagent工作空间)
SUBAGENT_WORKSPACE=/tmp/subagent-workspace
SUBAGENT_CACHE_DIR=/tmp/subagent-cache

# ------------------
# 安全配置
# ------------------
# 允许的操作模式
ALLOW_FILE_WRITE=true
ALLOW_NETWORK_ACCESS=true  
ALLOW_SHELL_COMMANDS=false  # 建议保持false

# API访问白名单
ALLOWED_APIS=deepseek,anthropic,linear,github,supabase
ALLOWED_DOMAINS=api.deepseek.com,api.anthropic.com,api.linear.app,api.github.com

# ------------------
# 调试配置
# ------------------
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_SUBAGENT_OUTPUTS=true