DEEPSEEK_MODEL=deepseek-chat

# 备用配置
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_API_URL=https://ark.cn-beijing.volces.com/api/v3/chat/completions
DOUBAO_MODEL=doubao-seed-1-6-thinking-250715
ANTHROPIC_API_KEY=your_anthropic_key_here
RESEND_API_KEY=your_resend_key_here           # 邮箱推送服务
SERVER_CHAN_KEY=your_serverchan_key_here      # 微信推送(Server酱)
LINEAR_API_KEY=your_linear_api_key_here       # Linear项目管理
WECHAT_WORK_WEBHOOK="your_wechat_webhook_here"  # 企业微信机器人

# ------------------
# Supabase 配置
# ------------------
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ------------------
# 推送目标配置
# ------------------
NOTIFICATION_EMAILS=your_email@example.com
WECHAT_USER_IDS=@all                          # 微信推送目标
LINEAR_TEAM_ID=your_linear_team_id_here

# ------------------
# 分析配置
# ------------------
ANALYSIS_THRESHOLD=5                          # 触发分析的最少新记录数
PROGRESS_UPDATE_HOUR=18                       # 每日进度报告时间(24小时制)
AI_ANALYSIS_MODEL=deepseek-chat              # AI分析使用的模型

# ------------------
# 调试配置
# ------------------
DEBUG_MODE=false                              # 是否启用调试模式
LOG_LEVEL=info                                # 日志级别: debug, info, warn, error